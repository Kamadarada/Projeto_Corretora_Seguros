@model Projeto_SolCar.Models.PlanosViewModel

@{
    ViewData["Title"] = "Details";
}


<style>
    .btn {
        float: left;
    }

    .cinza {
        color: #888888
    }

    h6 {
        color: #888888;
        display: inline-block;
        width: 30%;
    }

    h5 {
        color: #555555;
        display: inline-block;
        width: 30%;
    }

    .MesmaLinha {
        display: flex;
    }

    ul {
        padding-top: 25px;
        padding-bottom: 25px;
        padding-left: 50px;
        display: grid;
    }

    hr {
        size: 2px;
        align: center;
        width: 93%;
    }

    #Des {
        width: 100%;
        text-align: center;
    }


</style>


<h1 style="margin-right:70px" >Consulta</h1>

<a style="margin-top:85px;background-color: #e86d27;border-radius:5px; border:none; height:35px; color:white; padding:10px; text-decoration:none"
   asp-action="Consulta">Voltar à lista</a>

<br>
<ul>
    <h4 id="NP" style="align-self:center; margin-top:25px;">@Model.Nome</h4>
    <br>
    <div class="MesmaLinha">
        <h6 id="DdN">Data de Nascimento:@Model.Data_nasc</h6>
        <h6 id="S">Sexo: Gênero</h6>
        

    </div>
    <div class="MesmaLinha">
        <h6 id="CPF">CPF:@Model.CPF</h6>
        <h6 id="RG">RG: @Model.RG</h6>
    </div>
    <div class="MesmaLinha">
        <h6 id="E">Email: @Model.Email</h6>
        <h6 id="T">Telefone: @Model.Telefone</h6>
    </div>
    <br>
    <div class="MesmaLinha">
        <h6 id="End">Endereço: @Model.Endereco</h6>
        <h6 id="Ba">Bairro: @Model.Bairro</h6>
    </div>
    <div class="MesmaLinha">
        <h6 id="Cid">Cidade: @Model.Cidade</h6>
        <h6 id="CEP">CEP: @Model.CEP</h6>
        <h6 id="Est">Estado: @Model.Estado</h6>
    </div>
</ul>
<hr>
<ul>
    <h4 style="text-align:start; margin-bottom:35px">Seguros contratados</h4>

    @foreach(var plano in Model.Seguro_Carro)
    {
      

     <div class="MesmaLinha">
        <h6 id="S_D">Seguro de Carro - @plano.TipoCobertura</h6>
        <h6 id="SD_DC">Data do contrato: @plano.DataContratoCarro</h6>
        <h6 id="SD_DC">Data do expiração: @plano.DataExpiraCarro</h6>
            

        <br/>
       
        
     </div>

       
       <label name="Observacao" class="form-label"></label>
        <textarea name="Observacao" id="OBS_Texto" placeholder="Nenhuma observação para seguro de carro" class="form-control" style="width:80%; height: 50px; margin-bottom:25px">@plano.Observacao</textarea>
       

    }

    @foreach(var plano in Model.Seguro_Casa)
    {
      

     <div class="MesmaLinha">
            <h6 id="S_D">Plano: Seguro de Casa - @plano.TipoCobertura </h6>
            <h6 id="SD_DC">Data do contrato: @plano.DataContratoCasa</h6>
            <h6 id="SD_DC">Data do expiração: @plano.DataExpiraCasa</h6>

            
     </div>

        <label name="Observacao" class="form-label"></label>
        <textarea name="Observacao" id="OBS_Texto" placeholder="Nenhuma observação para o seguro residêncial" class="form-control" style="width:80%; height: 50px; margin-bottom:25px ;">@plano.Observacao</textarea>



    }



    
</ul>
<hr>
<ul>
    <a asp-action="Delete" asp-route-id="@Model.Id" id="Des" type="submit" class="btn-primary btn"
            style="align: center !important;width: 89%;color: #ffffff; margin-top:5px; background-color: #e86d27 !important; outline:none !important; border: none !important;">
        Desativar
        cadastro
    </a>
</ul>



